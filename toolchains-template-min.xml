<toolchains xmlns="http://maven.apache.org/TOOLCHAINS/1.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/TOOLCHAINS/1.1.0 http://maven.apache.org/xsd/toolchains-1.1.0.xsd">
  <!--
       JDK toolchains.

       `JDK_BASE_DIR` is a directory containing (symlinks to) JDK installations with their
       directory names equal to the version (e.g., `1.8` or `11.0.2`)
       -->
  <toolchain>
    <type>jdk</type>
    <provides>
      <version>1.8</version>
    </provides>
    <configuration>
      <jdkHome>JDK_BASE_DIR/1.8</jdkHome>
    </configuration>
  </toolchain>

  <toolchain>
    <type>jdk</type>
    <provides>
      <version>11.0</version>
    </provides>
    <configuration>
      <jdkHome>JDK_BASE_DIR/11.0</jdkHome>
    </configuration>
  </toolchain>
</toolchains>
