{
  "name": "exonum-java-binding-cryptocurrency-demo",
  "version": "1.0.0",
  "description": "Cryptocurrency demo for java binding",
  "author": "Exonum Team <contact@exonum.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/exonum/exonum-java-binding"
  },
  "scripts": {
    "proto": "pbjs --keep-case -t static-module ../src/main/proto/transactions.proto ../src/main/proto/wallet.proto -o ./src/proto/proto.js",
    "lint": "eslint --ext .js,.vue src tests",
    "compile": "webpack",
    "test": "jest",
    "build": "npm run proto && npm run lint && npm run test && npm run compile",
    "start": "node server.js"
  },
  "jest": {
    "verbose": true,
    "moduleDirectories": [
      "node_modules"
    ]
  },
  "dependencies": {
    "axios": "^0.21.1",
    "big-integer": "^1.6.48",
    "bootstrap": "^4.4.1",
    "exonum-client": "^0.16.4",
    "express": "^4.17.1",
    "http-proxy-middleware": "^1.0.5",
    "jquery": "^3.5.0",
    "noty": "^3.2.0-beta",
    "numeral": "^2.0.6",
    "protobufjs": "^6.8.9",
    "vue": "^2.6.11",
    "vue-router": "^3.1.6",
    "vuex": "^3.1.3",
    "yargs-parser": "^20.2.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.9.0",
    "axios-mock-adapter": "^1.18.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.2.6",
    "babel-loader": "^8.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-plugin-vue": "^6.2.2",
    "jest": "^25.2.7",
    "regenerator-runtime": "^0.13.5",
    "vue-loader": "^15.9.1",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  }
}
